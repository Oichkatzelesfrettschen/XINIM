# Test Makefile for modern make system
CC=clang++-18
CXXFLAGS=-std=c++23 -O2 -pipe -Wall -Wextra -Wpedantic \
    -march=x86-64-v1 -msse2 -msse3 -mssse3 -msse4.1 -msse4.2
TARGET=test_program
SOURCES=main.cpp utils.cpp

all: $(TARGET)

$(TARGET): $(SOURCES)
	$(CC) $(CXXFLAGS) -o $(TARGET) $(SOURCES)

clean:
	rm -f $(TARGET) *.o

.PHONY: all clean
